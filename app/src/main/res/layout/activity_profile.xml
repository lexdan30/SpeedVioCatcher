            <TextView
                android:id="@+id/nationality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/grdNumbers3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="Nationality: null"
                android:textColor="#2B2B2B"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="#26497f"/>
        <RelativeLayout
            android:id="@+id/reg_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:elevation="2dp"
            android:paddingBottom="24dp">

            <TextView
                android:id="@+id/profile_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="31dp"
                android:text="Registration Info"
                android:textColor="#2B2B2B"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/res_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_name1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="Restriction code: null"
                android:textColor="#2B2B2B"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/agency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/res_code"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="ACY: null"
                android:textColor="#2B2B2B"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/expiry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/agency"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="Epires: null"
                android:textColor="#2B2B2B"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="#26497f"/>
        <RelativeLayout
            android:id="@+id/vehicle_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:elevation="2dp"
            android:paddingBottom="24dp">

            <TextView
                android:id="@+id/profile_name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="31dp"
                android:text="Vehicle Info"
                android:textColor="#2B2B2B"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/plate_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_name3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="Plate No: null"
                android:textColor="#2B2B2B"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/cr_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/plate_no"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="CR #: null"
                android:textColor="#2B2B2B"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />
            <TextView
            android:id="@+id/make"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cr_no"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="Make: null"
            android:textColor="#2B2B2B"
            android:textSize="14sp"
            tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/series"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/make"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="Series: null"
                android:textColor="#2B2B2B"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/year_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/series"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="Year Model: null"
                android:textColor="#2B2B2B"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#26497f"/>
</LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:elevation="8dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:src="@drawable/svclogo"
                android:id="@+id/profilepic"
                android:layout_width="120dp"
                app:civ_border_color="#ffffff"
                app:civ_border_width="3dp"
                android:elevation="11dp"
                android:background="@drawable/round_image"
                android:layout_height="120dp"
                android:layout_marginTop="141dp"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
    </RelativeLayout>

</ScrollView>
