<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="ScrollViewSize">

        <ImageView
            android:id="@+id/header_cover_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="31dp"
            android:scaleType="centerCrop"
            android:src="@drawable/wallpaper"
            tools:ignore="ContentDescription" />


        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_cover_image"
            android:background="#fff"
            android:elevation="4dp"
            android:paddingBottom="24dp">

            <TextView
                android:id="@+id/driver_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="31dp"
                android:text="â†»Tap to refresh."
                android:textColor="#2B2B2B"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/license_No"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/driver_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text=""
                android:textColor="#2B2B2B"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/restriction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/license_No"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text=""
                android:textColor="#2B2B2B"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />
        </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="ScrollViewSize"
        android:id="@+id/profile_layout2"
        android:orientation="vertical"
        android:elevation="3dp"
        android:layout_below="@+id/profile_layout">
        <RelativeLayout
            android:id="@+id/driver_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:elevation="4dp"
            android:paddingBottom="24dp">

            <TextView
                android:id="@+id/profile_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="31dp"
                android:text="Personal Info"
                android:textColor="#2B2B2B"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/license"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_name2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="License: null"
                android:textColor="#2B2B2B"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/license"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="Address: null"
                android:textColor="#2B2B2B"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />
            <View
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="#26497f"/>
            <TableLayout

                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/address"
                android:id="@+id/grdNumbers" >
                <TableRow tools:ignore="UselessParent">
                    <TextView
                        android:layout_width="3dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="12dp"
                        android:minWidth="30px"
                        android:gravity="center"
                        android:text=""
                        android:layout_marginTop="10dp"
                        tools:ignore="HardcodedText,PxUsage,RtlHardcoded" />
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:minWidth="30px"
                        android:gravity="center"
                        android:id="@+id/b_Date"
                        android:text="BIRTH DATE:"
                        android:textColor="#000"
                        android:layout_marginTop="10dp"
                        android:textSize="12sp"
                        tools:ignore="HardcodedText,PxUsage" />
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:minWidth="60px"
                        android:id="@+id/sex"
                        android:gravity="center"
                        android:textColor="#000"
                        android:textSize="12sp"
                        android:text="SEX:"
                        android:layout_marginTop="10dp"
                        tools:ignore="HardcodedText,PxUsage" />
                    <TextView
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:minWidth="30px"
                        android:gravity="center"
                        android:textColor="#000"
                        android:text="HT.(cm):"
                        android:id="@+id/ht"
                        android:textSize="12sp"
                        android:layout_marginTop="10dp"
                        tools:ignore="HardcodedText,PxUsage" />
                    <TextView
                        android:layout_width="62dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:minWidth="30px"
                        android:textColor="#000"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:text="WT.(kg):"
                        android:id="@+id/wt"
                        android:layout_marginTop="10dp"
                        tools:ignore="HardcodedText,PxUsage" />
                </TableRow>
            </TableLayout>


            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/grdNumbers"
                android:id="@+id/grdNumbers3" >
                <TableRow tools:ignore="UselessParent">
                    <TextView
                        android:layout_width="3dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="12dp"
                        android:minWidth="30px"
                        android:gravity="center"
                        android:text=""
                        android:layout_marginTop="10dp"
                        tools:ignore="HardcodedText,PxUsage,RtlHardcoded" />
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:minWidth="30px"
                        android:gravity="center"
                        android:id="@+id/txtDate"
                        android:textColor="#000"
                        android:text="null"
                        android:layout_marginTop="10dp"
                        android:textSize="12sp"
                        tools:ignore="HardcodedText,PxUsage" />
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:minWidth="60px"
                        android:id="@+id/txtSex"
                        android:textColor="#000"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:text="null"
                        android:layout_marginTop="10dp"
                        tools:ignore="HardcodedText,PxUsage" />
                    <TextView
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:minWidth="30px"
                        android:gravity="center"
                        android:text="null"
                        android:textColor="#000"
                        android:id="@+id/txtHt"
                        android:textSize="12sp"
                        android:layout_marginTop="10dp"
                        tools:ignore="HardcodedText,PxUsage" />
                    <TextView
                        android:layout_width="62dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:minWidth="30px"
                        android:gravity="center"
                        android:textColor="#000"
                        android:textSize="12sp"
                        android:text="null"
                        android:id="@+id/txtWt"
                        android:layout_marginTop="10dp"
                        tools:ignore="HardcodedText,PxUsage" />
                </TableRow>
            </TableLayout>



