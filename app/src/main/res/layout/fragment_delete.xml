<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/addContent"
    tools:context="com.example.friendspc.speedviocatcher.DriversInfo">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_content"
        tools:ignore="ObsoleteLayoutParam,UselessParent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

    <!-- TODO: Update blank fragment layout -->

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="577dp"/>

    <!-- FOOTER NAVIGATION -->
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:elevation="4dp"
        android:layout_above="@+id/footer_border"
        android:background="@drawable/shadow"
        tools:ignore="ObsoleteLayoutParam" />
    <LinearLayout
        android:id="@+id/footer_border"
        android:background="#FF7D5A"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_above="@+id/footer"
        tools:ignore="ObsoleteLayoutParam,Orientation" />
    <LinearLayout
        android:orientation="horizontal"
        android:background="#26497f"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/footer"
        tools:ignore="DisableBaselineAlignment,ObsoleteLayoutParam">
        <LinearLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/tab1"
            tools:ignore="RtlHardcoded">
            <ImageButton
                android:id="@+id/tab1_icon"
                android:layout_weight="2"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:background="#26497f"
                android:src="@drawable/list_icon"
                android:clickable="true"
                android:fontFamily="sans-serif-light"
                tools:targetApi="jelly_bean"
                tools:ignore="ContentDescription,NestedWeights" />
            <TextView
                android:gravity="center"
                android:id="@+id/tab1_text"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="8dp"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:text="ticket"
                tools:ignore="HardcodedText,SpUsage" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#26497f"
            android:id="@+id/tab2">
            <ImageButton
                android:id="@+id/tab2_icon"
                android:layout_weight="2"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:background="#26497f"
                android:src="@drawable/db_icon"
                android:clickable="true"
                android:fontFamily="sans-serif-light"
                tools:ignore="ContentDescription,NestedWeights" />
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/tab2_text"
                android:textColor="@color/white"
                android:textSize="8dp"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:text="dbase"
                tools:ignore="HardcodedText,SpUsage" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/tab0"
            tools:ignore="RtlHardcoded">
            <ImageButton
                android:id="@+id/btnsync"
                android:layout_weight="2"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:background="#26497f"
                android:src="@drawable/sync_icon"
                android:clickable="true"
                android:fontFamily="sans-serif-light"
                tools:targetApi="jelly_bean"
                tools:ignore="ContentDescription,NestedWeights" />
            <TextView
                android:gravity="center"
                android:id="@+id/sync"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="8dp"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:text="sync"
                tools:ignore="HardcodedText,SpUsage" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/tab3">
            <ImageButton
                android:id="@+id/tab3_icon"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#26497f"
                android:src="@drawable/map_white"
                android:clickable="true"
                android:fontFamily="sans-serif-light"
                tools:ignore="ContentDescription,NestedWeights" />
            <TextView
                android:gravity="center"
                android:id="@+id/tab3_text"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="8dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="map"
                tools:ignore="HardcodedText,SpUsage" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/tab4">
            <ImageButton
                android:id="@+id/tab4_icon"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#26497f"
                android:src="@drawable/notif_icon"
                android:clickable="true"
                android:fontFamily="sans-serif-light"
                tools:ignore="ContentDescription,NestedWeights" />
            <TextView
                android:gravity="center"
                android:id="@+id/tab4_text"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="8dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="notif"
                tools:ignore="HardcodedText,SpUsage" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
</FrameLayout>
